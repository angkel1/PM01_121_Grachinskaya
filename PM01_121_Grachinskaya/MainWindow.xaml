<Window x:Class="PM01_121_Grachinskaya.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM01_121_Grachinskaya"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="235*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Логин" Margin="10,15,88,0" Grid.Row="1" FontSize="36" Height="60" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="Пароль" Margin="10,86,62,0" Grid.Row="1" FontSize="36" Height="57" VerticalAlignment="Top"/>
        <TextBox Name="txtLogin" Grid.Column="2" Margin="0,20,109,0" Grid.Row="1" TextWrapping="NoWrap" FontSize="36" Background="Transparent" ToolTip="Введите логин" TextChanged="txtLogin_TextChanged" Height="53" VerticalAlignment="Top"/>
        <TextBlock Name="txtTBLogin" Text="Логин" Grid.Column="2" Margin="24,20,334,0" Grid.Row="1" FontSize="36" Foreground="Gray" Height="50" VerticalAlignment="Top"/>
        <PasswordBox Name="txtPassword" Grid.Column="2" Margin="0,91,109,0" Grid.Row="1" FontSize="36" ToolTip="Введите пароль" PasswordChanged="txtPswrd_PasswordChanged" Height="53" VerticalAlignment="Top" Background="Transparent"/>
        <TextBlock Name="txtTBPassword" Text="Пароль" Grid.Column="2" Margin="24,91,307,0" Grid.Row="1" FontSize="36" Foreground="Gray" Height="50" VerticalAlignment="Top"/>
        <Button Name="btnEnter" Grid.Column="2" Content="Вход" Margin="0,158,110,0" Grid.Row="1" FontSize="24" Height="43" ToolTip="Вход в аккаунт" VerticalAlignment="Top" Click="btnEnter_OnClick"/>
        <Button Name="btnSighUp" Grid.Column="2" Content="Регистрация" Margin="0,206,110,0" Grid.Row="1" FontSize="24" Height="46" ToolTip="Зарегистрируйся, если нет аккаунта" VerticalAlignment="Top" Click="btnSingUP_Click"/>

    </Grid>
</Window>
